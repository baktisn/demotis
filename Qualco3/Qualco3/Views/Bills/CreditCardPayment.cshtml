@model Db.Models.Bills


@{
    ViewData["Title"] = "CreditCardPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Credit Card Payment</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PaymentConfirmed" method="post" id="payment-form">
            <span class="payment-errors"></span>
            <input type="hidden" asp-for="ID" />
            <div class="form-row">
                <label>
                    <span>Card Number</span>
                    <input type="text" size="20" data-stripe="number" />
                </label>
            </div>

            <div class="form-row">
                <label>
                    <span>CVC</span>
                    <input type="text" size="4" data-stripe="cvc" />
                </label>
            </div>

            <div class="form-row">
                <label>
                    <span>Expiration (MM/YYYY)</span>
                    <input type="text" size="2" data-stripe="exp-year" />
                </label>
            </div>
            <input type="submit" value="Submit Payment" class="btn btn-default" />
            <hr />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
