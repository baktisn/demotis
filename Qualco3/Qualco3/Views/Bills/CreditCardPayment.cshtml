@model Db.Models.Bills


@{
    ViewData["Title"] = "CreditCardPayment";
}


<div class="container">
    <div class="notice notice-warning">
        <strong><h4>Λογαρισμός προς πληρωμή</h4></strong>
        <div class="panel notice-warning">

            <table class="table table-hover" id="dev-table">
                <thead>
                    <tr>
                        <th>
                            Είδος
                        </th>
                        <th>
                            Ημερομηνία Λήξης
                        </th>
                        <th>
                            Ποσό
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>
                            @Html.DisplayFor(model => model.Bill_description)
                        </th>
                        <th>
                            @Html.ValueFor(model => model.DueDate, "{0:dd/MM/yyyy hh:mm}")
                        </th>
                        <th>
                            @Html.ValueFor(model => model.Amount, "{0:C}")
                        </th>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>



    <div class="notice notice-warning">
        <div class="form-horizontal" role="form">
            <fieldset>
                <form asp-action="PaymentConfirmed" method="post" id="payment-form">
                    <span class="payment-errors"></span>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="card-holder-name">Όνομα κατόχου</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="card-holder-name" id="card-holder-name" placeholder="Όνομα κατόχου Κάρτας">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="card-number">Αριθμός Κάρτας</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="card-number" id="card-number" placeholder="Αριθμός Πιστωτικής/Χρεωστικής Κάρτας">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="expiry-month">Ημ. Λήξης</label>
                        <div class="col-sm-9">
                                <div class="col-xs-3">
                                    <select class="form-control col-sm-2" name="expiry-month" id="expiry-month">
                                        <option>Month</option>
                                        <option value="01">Ιανουάριος (01)</option>
                                        <option value="02">Φεβρουάριος (2)</option>
                                        <option value="03">Μάρτιος (03)</option>
                                        <option value="04">Απρίλιος (04)</option>
                                        <option value="05">Μάιος (05)</option>
                                        <option value="06">Ιούνιος (06)</option>
                                        <option value="07">Ιούλιος (07)</option>
                                        <option value="08">Αύγουστος (08)</option>
                                        <option value="09">Σεπτέμβριος (09)</option>
                                        <option value="10">Οκτώβριος (10)</option>
                                        <option value="11">Νοέμβριος (11)</option>
                                        <option value="12">Δεκέμβριος (12)</option>
                                    </select>
                                </div>
                                <div class="col-xs-3">
                                    <select class="form-control" name="expiry-year">
                                        <option value="17">2017</option>
                                        <option value="18">2018</option>
                                        <option value="19">2019</option>
                                        <option value="20">2020</option>
                                        <option value="21">2021</option>
                                        <option value="22">2022</option>
                                        <option value="23">2023</option>
                                    </select>
                                </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="cvv">Αριθμός CVV</label>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" name="cvv" id="cvv" placeholder="Κωδικός Ασφαλείας">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-9">
                            <button type="submit" class="btn btn-warning">Πληρωμή</button>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
</div>

<hr />

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
<script type="text/javascript">


    $('#payment-form').submit(function () {

    if (!$('#card-holder-name').val() || !$('#card-number').val() || $('#expiry-month').val()=="Month" || !$('#cvv').val() ) 
        {
            alert("Θα πρέπει να συμπληρώσετε όλα τα πεδία!");
            return false;
        }
        else{}
    });

</script>
