@using Microsoft.AspNetCore.Identity
@using Db.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<li class="dropdown user user-menu">
    <!-- Menu Toggle Button -->
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <!-- The user image in the navbar-->
        <i class="fa fa-gear"></i>
    </a>
    <ul class="dropdown-menu box">
        <!-- The user image in the menu -->
        <li class="user-header">
          @if (SignInManager.IsSignedIn(User))
          {  <p>
                 <br />Γειά σου, <br /><br /> @UserManager.GetUserName(User)
            </p>
          }
        </li>
        <!-- Menu Body -->
        
            <!-- /.row -->
        
        <!-- Menu Footer-->
        <li class="user-footer">
            <div class="pull-left">
                <form asp-controller="Manage" asp-action="Index" method="get">
                    <button type="submit" class="btn btn-default">Προφίλ</button>
                </form>
            </div>
            <div class="pull-right">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-default">Αποσύνδεση</button>
                </form>
            </div>
        </li>
    </ul>
</li>

                  
